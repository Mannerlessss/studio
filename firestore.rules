rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Plans can be read by any authenticated user, but only modified by admin (via Admin SDK)
    match /plans/{planId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }

    // Offers can be read by any authenticated user, but only modified by admin (via Admin SDK)
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Each user can read and write ONLY their own data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // This rule applies to all subcollections under a user's document
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // This rule allows the referral query to work by checking for a referral code
    // It is secure because it only allows a read if the query is specifically for the 'referralCode' field.
    // It does not allow reading the entire collection or other users' documents freely.
    match /users/{document=**} {
      allow list: if request.auth != null;
    }
  }
}