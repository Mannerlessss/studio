rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own documents.
    // This is the most secure and common rule for user data.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow any authenticated user to view details of any other user.
    // This might be useful for features like leaderboards or profiles.
    // Note: This rule allows reading of user profiles, but not listing all users.
    match /users/{userId} {
      allow get: if request.auth != null;
    }
  }
}
