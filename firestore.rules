rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Admins have full access to everything
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }

    // User-specific access
    match /users/{userId} {
      // Users can read and update their own main document
      allow read, update: if request.auth.uid == userId;
      // Users can create their own user document during signup
      allow create: if request.auth.uid == userId;

      // Users can access their own subcollections
      match /{subcollection}/{docId} {
        allow read, write, create, delete: if request.auth.uid == userId;
      }
    }
    
    // All authenticated users can read the 'offers' collection
    match /offers/{offerId} {
      allow read: if request.auth != null;
    }
  }
}
