rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Plans are read-only for any authenticated user
    match /plans/{planId} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); // Only admins can modify plans
    }

    // Offers are read-write only for admins
    match /offers/{offerId} {
      allow read, write: if isAdmin();
    }

    // Users can create their own doc, and only read/write their own doc after creation.
    // Admins can read any user's doc.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow get, update, delete: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId || isAdmin();
      
      // A user can read/write to any subcollection within their own document.
      // Admins can also read these subcollections.
      match /{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId;
        // Admins need read access to subcollections like withdrawals for the admin panel
        allow read: if isAdmin();
      }
    }
    
    // Admins need list access to the root collections for the admin panel dashboards.
    match /users/{document=**} {
      allow read: if isAdmin();
    }
     match /withdrawals/{document=**} {
      allow read: if isAdmin();
    }
  }
}
