
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth.token.email == 'gagansharma.gs107@gmail.com';
    }

    // Rules for the main 'users' collection
    match /users/{userId} {
      // ANY authenticated user can CREATE their own user document during signup
      allow create: if request.auth != null;

      // Users can READ and UPDATE their own data.
      // The ADMIN can READ and UPDATE any user's data.
      allow read, update: if request.auth.uid == userId || isAdmin();
      
      // The ADMIN can LIST all users. Regular users cannot.
      allow list: if isAdmin();

      // Rules for subcollections within a user document
      match /{allPaths=**} {
         // The ADMIN can read/write to any subcollection document for any user.
        allow read, write: if isAdmin();
      }

      // Users can access their own subcollections
      match /transactions/{transactionId} {
        allow read, list, create: if request.auth.uid == userId;
      }
      match /referrals/{referralId} {
         allow read, list, create: if request.auth.uid == userId;
      }
      match /withdrawals/{withdrawalId} {
         allow read, list, create: if request.auth.uid == userId;
         // Admin can also update (approve/reject) withdrawals
         allow update: if isAdmin();
      }
    }

    // Rules for the 'offers' collection
    match /offers/{offerId} {
      // Only the admin can create, read, update, list, or delete offers.
      allow read, write, list, delete: if isAdmin();
    }
  }
}
