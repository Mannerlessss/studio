rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isOwnerOrAdmin(userId) {
      return isOwner(userId) || isAdmin();
    }

    // USERS Collection
    match /users/{userId} {
      // Users can read their own document. Admins can read any user document.
      allow read: if isSignedIn() && isOwnerOrAdmin(userId);
      
      // Users can create their own document on signup.
      allow create: if isSignedIn() && isOwner(userId);
      
      // Users can update specific fields. Admins can update any field.
      allow update: if (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'phone', 'lastLogin', 'usedReferralCode', 'redeemedOfferCodes', 'totalBalance', 'totalBonusEarnings', 'totalEarnings', 'hasCollectedSignupBonus', 'lastBonusClaim'])) || isAdmin();
    }

    // USER Subcollections
    match /users/{userId}/{subcollection}/{docId} {
      // Users can read/write to their own subcollections. Admins have full access.
      allow read, write: if isSignedIn() && isOwnerOrAdmin(userId);
    }
    
    // OFFERS Collection
    match /offers/{offerId} {
      // Any signed-in user can read offers (to check validity before redeeming).
      allow read: if isSignedIn();
      
      // Only admins can create, update, or delete offers.
      allow write: if isAdmin();
    }
  }
}
