rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow admins to read and write all data
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }

    // Rules for non-admin users
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      
      // Allow users to read their own transactions and referrals
      match /{subcollection}/{docId} {
        allow read: if request.auth.uid == userId;
      }

      // Allow users to create their own transactions
      match /transactions/{transactionId} {
        allow create: if request.auth.uid == userId;
      }
      
      // Allow users to create their own withdrawals
      match /withdrawals/{withdrawalId} {
        allow create: if request.auth.uid == userId;
      }
    }
    
    // Allow logged-in users to read offers
    match /offers/{offerId} {
        allow read: if request.auth != null;
    }
  }
}