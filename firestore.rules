
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Any authenticated user can CREATE a document in another user's referrals subcollection.
      match /referrals/{referralId} {
        allow create: if request.auth != null;
      }
      
      // Only the user can manage their own transactions and withdrawals.
      match /transactions/{transactionId} {
      	allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
      match /withdrawals/{withdrawalId} {
      	allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Referral codes are public for validation purposes.
    // Any authenticated user can GET a referral code document. List/query is disallowed.
    match /referralCodes/{code} {
      allow get: if request.auth != null;
    }

    // Offers collection (publicly readable). Only admins can write.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}

    