
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // 1. Allow authenticated users to read the users collection (for referral code checks etc.)
    // 2. Allow a user to create, read, update, and delete their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Add other collection rules here if needed
  }
}
