rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId; 
    }
    
    // Allow users to add themselves to another user's referral list
    match /users/{referrerId}/referrals/{referralId} {
      allow create: if request.auth != null;
    }

    // Offers collection (admin-managed)
    match /offers/{offerId} {
      // Allow authenticated users to read. Write access should be handled by admin SDK.
      allow read: if request.auth != null;
    }

    // Admin-specific rules for collections
    match /users/{userId}/{document=**} {
      // Allow admins full access to all subcollections
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
     match /offers/{offerId}/{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
