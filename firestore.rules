rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.role == "admin";
    }

    // Secure: Users can only access their own document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // Secure: Users can only access their own subcollections
    match /users/{userId}/{collectionId}/{docId} {
       allow read, write, delete: if request.auth.uid == userId;
       allow create: if request.auth.uid == userId;
    }
    
    // Admins can read all user data
    match /users/{userId} {
        allow get, list: if isAdmin();
    }
    
    // Admins can manage offers
    match /offers/{offerId} {
      allow read, write, create, delete: if isAdmin();
    }

    // Admins can manage plans
    match /plans/{planId} {
       allow read, list, create, delete: if isAdmin();
    }
    
    // PUBLIC ACCESS for referral code lookup during sign-up
    match /referralCodes/{code} {
      allow get: if true;
      allow write: if request.auth.uid != null; // Only logged in users can create them
    }
    
    // Admins need collectionGroup list access for withdrawals
     match /{path=**}/withdrawals/{withdrawalId} {
      allow read: if isAdmin();
    }
  }
}
