rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin-only collections
    match /withdrawals/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }

    // Plans: all logged-in users can read, no one can write directly
    match /plans/{planId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin via Admin SDK
    }

    // Offers: all logged-in users can read, no one can write directly
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin via Admin SDK
    }

    // Users collection:
    match /users/{userId} {
      // A user can create their own document, and can read/write it after creation.
      // Admins can read any user document.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow get, list: if request.auth != null; // Allow querying for referral checks

      // Subcollections like investments, transactions, etc.
      match /{subCollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}