rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admins have full access to everything. This rule is checked first.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can create their own document on signup.
      allow create: if request.auth != null;
      // A user can only get, update, or delete their own document.
      allow get, update, delete: if request.auth != null && request.auth.uid == userId;
      // Any authenticated user can query/list the users collection (needed for referral code checks).
      allow list: if request.auth != null;
    }

    // Rules for all subcollections within a user's document
    match /users/{userId}/{collection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'offers' collection
    match /offers/{offerId} {
        // Any authenticated user can read offers.
        allow read: if request.auth != null;
    }
  }
}