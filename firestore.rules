
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return request.auth.token.email == 'gagansharma.gs107@gmail.com';
    }

    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid != null;
      
      // Admin can list/read all subcollections for any user
      match /{allPaths=**} {
        allow read, list: if isAdmin();
      }
      
      // Users can manage their own subcollections
      match /transactions/{transactionId} {
        allow read, list, create: if request.auth.uid == userId;
      }
      match /withdrawals/{withdrawalId} {
        allow read, list, create: if request.auth.uid == userId;
        allow update: if isAdmin();
      }
      match /referrals/{referralId} {
        allow read, list, create: if request.auth.uid == userId;
      }
    }

    // Admin can list all users
    match /users {
      allow list: if isAdmin();
    }
    
    // Admin can manage offers
    match /offers/{offerId} {
      allow read, list, create, update, delete: if isAdmin();
    }
    
    // Admin can read all withdrawals for the admin panel
    match /{path=**}/withdrawals/{withdrawalId} {
      allow get: if isAdmin();
    }
  }
}

    