
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data.
    // They can read other users' data only for specific fields needed for referrals.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth.uid == userId;
    }

    // A user can create a referral document, but cannot read or modify existing ones.
    match /referrals/{referralId} {
      allow read: if false; // No one can read referral documents directly
      allow list: if false; // No one can list referral documents
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Fallback security rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
