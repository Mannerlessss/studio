
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own document.
    // This prevents users from accessing or modifying other users' data.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow authenticated users to query the users collection.
    // This is necessary for features like checking if a referral code exists.
    match /users/{document=**} {
      allow list: if request.auth != null;
    }
    
    // Referrals can be created by any authenticated user.
    // They cannot be read, updated or deleted by clients to protect privacy.
    // This logic should be handled by secure backend functions.
    match /referrals/{referralId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
  }
}
