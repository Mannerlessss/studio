rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "gagansharma.gs107@gmail.com";
    }

    // Rules for the users collection
    match /users/{userId} {
      // Admins can read/write any user document.
      // Users can only read/write their own document.
      allow read, write: if request.auth.uid == userId || isAdmin();

      // Rules for transactions subcollection
      match /transactions/{transactionId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }

      // Rules for referrals subcollection
       match /referrals/{referralId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }
    
    // Grant admin ability to LIST all users, which is required for the admin user table
    match /users {
        allow list: if isAdmin();
    }
    
    // Grant admin ability to LIST all withdrawals from any user
    match /{path=**}/withdrawals/{withdrawalId} {
      allow read: if isAdmin();
    }

    // Rules for the offers collection
    match /offers/{offerId} {
      // Only admins can read, list, and write to the offers collection.
      allow list, read, write: if isAdmin();
    }
  }
}
