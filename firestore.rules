rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Plans: all logged-in users can read, no one can write directly
    match /plans/{planId} {
      allow read: if request.auth != null;
      allow write: if false; // Can only be written by Admin SDK
    }

    // Offers: All auth users can read, only admin can write
    match /offers/{offerId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Users collection
    match /users/{userId} {
      // A user can create their own document, or an admin can
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can read/update/delete their own document, or an admin can
      allow read, update, delete: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);

      // A user can list other users for referral/leaderboard purposes, but cannot read document contents
      allow list: if request.auth != null;

      // subcollections inside user (like investments, referrals, etc.)
      match /{subCollection=**} {
        allow read, write, delete: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      }
    }

    // Collection group queries
    match /{path=**}/withdrawals/{withdrawalId} {
       allow read, list: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
