
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin Access: Admins can read and write anything.
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }

    // User Access Rules
    match /users/{userId} {
      // Users can read and update their own main user document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Users can create their own user document upon signup.
      allow create: if request.auth != null;

      // Allow users to manage their own subcollections
      match /transactions/{transactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /withdrawals/{withdrawalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /referrals/{referralId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rules for collections that are not user-specific but need access control.
    // Offers can be read by any authenticated user, but only written by admins (covered by admin rule).
    match /offers/{offerId} {
        allow read: if request.auth != null;
    }
    
    // Allow admins to create other documents (e.g. admin_requests)
    match /admin_requests/{requestId} {
      allow create: if request.auth != null;
    }
  }
}
