rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read/write any user document.
      // Regular users can only read/write their own document.
      allow read, write: if request.auth.uid == userId || isAdmin();
      
      // Rules for all subcollections under a user document
      match /{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }

    // Rules for the global 'offers' collection
    match /offers/{offerId} {
      // Admins can read and write.
      allow read, write: if isAdmin();
      // All authenticated users can read.
      allow get: if request.auth != null;
    }
    
    // Rules for the global 'plans' collection
    match /plans/{planId} {
        // Admins can read and write
        allow read, write: if isAdmin();
        // All authenticated users can read
        allow get: if request.auth != null;
    }

    // This rule allows admins to perform a collectionGroup query on 'withdrawals'
    // This is required for the admin panel to fetch all pending withdrawals.
    match /{path=**}/withdrawals/{withdrawalId} {
      allow read: if isAdmin();
    }
  }
}
