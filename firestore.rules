rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // helper: check admin role
    function isAdmin() {
      return request.auth != null && request.auth.token.role == "admin";
    }
    
    // Global Read for Admins
    match /{document=**} {
      allow read, list: if isAdmin();
    }

    // USERS collection
    match /users/{userId} {
      // user can read/write their own doc; admin can write to any
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow write: if isAdmin();

      // user subcollections (investments, transactions, withdrawals, referrals)
      match /{subCollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // GLOBAL collections
    match /plans/{planId} {
      allow read: if request.auth != null;   // all logged-in users can view
      allow write: if isAdmin();             // only admin can create/update
    }

    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
