rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.role == "admin";
    }

    // User-specific rules
    match /users/{userId} {
      // Admins can read/write any user doc. Users can only read/write their own.
      allow read, write: if request.auth.uid == userId || isAdmin();

      // Users can access their own subcollections. Admins can access any.
      match /{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }
    
    // Rules for global collections that all users can read, but only admins can write.
    match /plans/{planId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // This is the critical rule for the admin panel.
    // It allows an admin to perform a collectionGroup query on 'withdrawals'.
    match /{path=**}/withdrawals/{withdrawalId} {
      allow read, list: if isAdmin();
    }
  }
}
