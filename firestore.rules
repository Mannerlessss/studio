rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public read for plans
    match /plans/{planId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }

    // Offers can be read by any user, written by admin
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
    
    // Users can be created by anyone (for signup), but only queried by authenticated users.
    // A user can only get/update/delete their own document.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow get, update, delete: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null; // Allows querying for referral lookup
    }

    // Users can manage all their own subcollections
    match /users/{userId}/{allPaths=**} {
      allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Admin can read/write all withdrawals
    match /withdrawals/{withdrawalId} {
       allow read, write: if request.auth.token.admin == true;
    }
  }
}
