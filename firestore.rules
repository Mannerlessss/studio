rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin role
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    // Users can only read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Users can only access their own subcollections
      match /{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Admin-specific rules
    match /users/{userId} {
      // Admins can read any user's document
      allow get, list: if isAdmin();
      
      match /{subcollection}/{docId} {
        // Admins can read any document in any user's subcollection
        allow get, list: if isAdmin();
      }
    }
    
    match /offers/{offerId} {
        // Any authenticated user can read offers
        allow get: if request.auth != null;
        // Only admins can create, update, or delete offers
        allow list, write: if isAdmin();
    }
  }
}
