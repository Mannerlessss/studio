rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Admins can do anything
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }

    match /users/{userId} {
      // Allow a user to read and update their own document.
      // Create/delete is handled by server-side functions (auth trigger).
      allow read, update: if request.auth.uid == userId;
    }

    match /users/{userId}/{subcollection}/{docId} {
      // Allow user to manage documents in their own subcollections
      // (e.g., creating a withdrawal request).
      allow read, write, create, delete: if request.auth.uid == userId;
    }
    
    // Offers can be read by any authenticated user
    match /offers/{offerId} {
      allow read: if request.auth != null;
    }
  }
}
