rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS Collection
    match /users/{userId} {
      // Admins can read/write any user document
      allow read, write: if isAdmin();
      
      // A user can read/update their own document
      // Note: `create` is handled by server-side logic in signUp to prevent abuse.
      // Note: `delete` is handled by a server-side flow.
      allow read, update: if isAuthenticated() && isOwner(userId);
    }
    
    // Subcollections of USERS
    match /users/{userId}/{collection} {
        // Admins can do anything in user subcollections
        allow read, write: if isAdmin();
    }

    match /users/{userId}/transactions/{transactionId} {
        // A user can read their own transactions
        allow read: if isAuthenticated() && isOwner(userId);
    }

    match /users/{userId}/investments/{investmentId} {
        // A user can read their own investments
        allow read: if isAuthenticated() && isOwner(userId);
    }

    match /users/{userId}/referrals/{referralId} {
        // A user can read their own referral list
        allow read: if isAuthenticated() && isOwner(userId);
    }
    
    match /users/{userId}/withdrawals/{withdrawalId} {
        // A user can read their own withdrawal requests
        allow read: if isAuthenticated() && isOwner(userId);
        
        // A user can create their own withdrawal request
        allow create: if isAuthenticated() && isOwner(userId);
    }

    // OFFERS Collection
    match /offers/{offerId} {
        // Any authenticated user can read offer codes
        // (Needed for client-side redemption checks)
        allow read: if isAuthenticated();
        
        // Only admins can create, update, or delete offers
        allow write: if isAdmin();
    }
  }
}
