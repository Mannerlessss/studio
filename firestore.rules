rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS collection
    match /users/{userId} {
      // Any authenticated user can list users (needed for referral leaderboard)
      // but can only read their own document's contents.
      allow list: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;

      // New users can create their own document.
      allow create: if request.auth != null;

      // Subcollections (transactions, investments, etc.)
      // Users can manage documents within their own subcollections.
      match /{collectionId}/{docId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Publicly readable collections for authenticated users
    match /investmentPlans/{planId} {
      allow read: if request.auth != null;
    }

    match /offers/{offerId} {
      allow read: if request.auth != null;
    }
    
    // The admin panel reads these collections directly.
    // The rules here are for potential client-side reads if ever needed.
    // Admin backend functions bypass these rules.
    match /{path=**}/withdrawals/{withdrawalId} {
        allow read: if request.auth != null;
    }
  }
}
