rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'gagansharma.gs107@gmail.com';
    }

    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      match /transactions/{transactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /withdrawals/{withdrawalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /referrals/{referralId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'gagansharma.gs107@gmail.com';
    }
  }
}
