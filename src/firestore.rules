rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read, update, or delete their own document.
    // They can create their own document if they are authenticated.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read their own referrals subcollection.
    // A referral document can only be created by an authenticated user,
    // which happens during the sign-up transaction.
    match /users/{userId}/referrals/{referralId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // A user can read and create their own transactions.
     match /users/{userId}/transactions/{transactionId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
    }

    // Only the admin can manage offer codes. Any user can read them.
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email == "gagansharma.gs107@gmail.com";
    }

    // Only the admin can manage withdrawal requests.
     match /{path=**}/withdrawals/{withdrawalId} {
        allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email == "gagansharma.gs107@gmail.com";
     }
  }
}
